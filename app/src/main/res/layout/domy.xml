<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottosheet"
        android:orientation="vertical"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:padding="8dp">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/seekbar2"
            android:max="100"
            android:progress="60"
            android:progressTint="@color/icon_color"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginBottom="2dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/lintop"
            android:background="@color/white"
            android:layout_below="@+id/seekbar2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/play2"
                android:id="@+id/linsheet">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/simage"
                    android:src="@drawable/animemusic"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SongName"
                        android:id="@+id/sname"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ssinger"
                        android:maxLines="1"
                        android:text="Jiban kumar Munda gdfgdfgdfgdfgg"/>
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/play2"
                android:background="@color/transparnt"
                android:tint="@color/black"
                android:layout_toLeftOf="@+id/next2"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_play2"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:id="@+id/next2"
                android:background="@color/transparnt"
                android:layout_toLeftOf="@+id/showlist"
                android:scaleType="centerCrop"
                android:tint="@color/black"
                android:layout_marginRight="10dp"
                android:src="@drawable/nxt"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/showlist"
                android:src="@drawable/ic_musiclist"
                android:visibility="visible"
                android:layout_toLeftOf="@+id/smore"
                android:background="@color/transparnt"
                android:tint="@color/black"
                android:layout_marginRight="10dp"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:id="@+id/smore"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@color/transparnt"
                android:tint="@color/black"
                android:visibility="visible"
                android:src="@drawable/ic_more"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/centerimage"
            android:layout_below="@+id/lintop"
            android:layout_above="@+id/relbellow"
            android:scaleType="centerCrop"
            android:src="@drawable/mikusong"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/slistview"
            android:background="@color/black"
            android:layout_below="@+id/lintop"
            android:backgroundTint="@color/white"
            android:visibility="gone"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_volume_up"
            android:layout_above="@+id/relbellow"
            android:background="@color/transparnt"
            android:tint="@color/white"
            android:id="@+id/volume"
            android:layout_marginLeft="20dp"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_fav"
            android:background="@color/transparnt"
            android:tint="@color/white"
            android:id="@+id/favourite"
            android:layout_above="@+id/relbellow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/relbellow"
            android:background="@color/white"
            android:layout_height="120dp">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/seekbar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:layout_below="@id/seekbar"
                android:layout_marginLeft="25dp"
                android:id="@+id/stime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:layout_below="@id/seekbar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:id="@+id/etime"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/repeat"
                    android:layout_marginLeft="25dp"
                    android:background="@color/transparnt"
                    android:tint="@color/black"
                    android:layout_marginTop="18dp"
                    android:id="@+id/loop"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/loop"
                    android:layout_toLeftOf="@+id/suffle"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/mybackword"
                        android:backgroundTint="@color/white"
                        android:tint="@color/black"
                        android:layout_marginTop="15dp"
                        android:id="@+id/backword"/>
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_play"
                        android:backgroundTint="@color/white"
                        android:tint="@color/black"
                        android:layout_toRightOf="@+id/backword"
                        android:tag="z"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/play"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/myforword"
                        android:backgroundTint="@color/white"
                        android:layout_toRightOf="@+id/play"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:tint="@color/black"
                        android:id="@+id/forword"/>
                </RelativeLayout>

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shuffle"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparnt"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="25dp"
                    android:id="@+id/suffle"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>