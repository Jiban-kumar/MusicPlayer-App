<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerlayout"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mc"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/design_default_color_primary"
            app:titleTextColor="@color/white"
            android:id="@+id/toolbar"/>
        <include layout="@layout/main_container"
            android:layout_below="@+id/toolbar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <include layout="@layout/newplaylistlayout"
            android:visibility="gone"/>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottosheet"
                android:orientation="vertical"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                app:behavior_peekHeight="60dp"
                android:padding="8dp">
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/seekbar2"
                    android:progressTint="@color/icon_color"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_marginBottom="2dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/lintop"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_below="@+id/seekbar2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/play2"
                        android:id="@+id/linsheet">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="centerCrop"
                            android:id="@+id/simage"
                            android:src="@drawable/animemusic"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SongName"
                                android:id="@+id/sname"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ssinger"
                                android:maxLines="1"
                                android:text="Jiban kumar Munda gdfgdfgdfgdfgg"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/play2"
                        android:background="@color/transparnt"
                        android:layout_toLeftOf="@+id/next2"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_play2"
                        app:tint="@color/black" />
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/next2"
                        android:background="@color/transparnt"
                        android:layout_toLeftOf="@+id/showlist"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/nxt"
                        app:tint="@color/black" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:id="@+id/showlist"
                        android:src="@drawable/ic_musiclist"
                        android:visibility="visible"
                        android:layout_toLeftOf="@+id/smore"
                        android:background="@color/transparnt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        app:tint="@color/black" />
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:id="@+id/smore"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparnt"
                        android:visibility="gone"
                        android:src="@drawable/ic_more"
                        app:tint="@color/black" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/centerimage"
                    android:layout_below="@+id/lintop"
                    android:layout_above="@+id/relbellow"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mikusong"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/slistview"
                    android:background="@color/black"
                    android:layout_below="@+id/lintop"
                    android:backgroundTint="@color/white"
                    android:visibility="gone"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_volume_up"
                    android:layout_above="@+id/relbellow"
                    android:background="@color/transparnt"
                    android:id="@+id/volume"
                    android:layout_marginLeft="20dp"
                    app:tint="@color/white" />
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_fav"
                    android:background="@color/transparnt"
                    android:id="@+id/favourite"
                    android:layout_above="@+id/relbellow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    app:tint="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/relbellow"
                    android:background="@color/white"
                    android:layout_height="120dp">
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:id="@+id/seekbar"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:0"
                        android:layout_below="@id/seekbar"
                        android:layout_marginLeft="25dp"
                        android:id="@+id/stime"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:0"
                        android:layout_below="@id/seekbar"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:id="@+id/etime"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentBottom="true">

                        <ImageButton
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_baseline_repeat_24"
                            android:layout_marginLeft="25dp"
                            android:background="@color/transparnt"
                            android:layout_marginTop="18dp"
                            android:id="@+id/loop"
                            app:tint="@color/black" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/loop"
                            android:layout_toLeftOf="@+id/suffle"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/mybackword"
                                android:backgroundTint="@color/white"
                                android:layout_marginTop="15dp"
                                android:id="@+id/backword"
                                app:tint="@color/black" />
                            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_play"
                                android:backgroundTint="@color/white"
                                android:layout_toRightOf="@+id/backword"
                                android:tag="z"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/play"
                                app:tint="@color/black" />
                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/myforword"
                                android:backgroundTint="@color/white"
                                android:layout_toRightOf="@+id/play"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:id="@+id/forword"
                                app:tint="@color/black" />
                        </RelativeLayout>

                        <ImageButton
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_baseline_shuffle_24"
                            android:layout_alignParentRight="true"
                            android:background="@color/transparnt"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="25dp"
                            android:id="@+id/suffle"/>

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navview"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/navmenu"
        android:layout_gravity="start"
        />


</androidx.drawerlayout.widget.DrawerLayout>