<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlaylistActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/icon_color"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scroll"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/mikusong"
                android:id="@+id/image"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist Name"
                    android:textSize="22sp"
                    android:maxLines="1"
                    android:id="@+id/text"/>
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/morebtn"/>
            </RelativeLayout>
            <com.example.musicplayer.NonScrollListview
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:id="@+id/listview"/>

        </LinearLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottosheet"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:behavior_peekHeight="60dp"
            android:padding="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/lintop"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/linsheet">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/animemusic"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SongName and like that"
                            android:id="@+id/sname"
                            android:textSize="18sp"
                            android:maxLines="1"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ssinger"
                            android:maxLines="1"
                            android:text="Jiban kumar Munda"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="40dp"
                    android:id="@+id/play2"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/showlist"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_play"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/showlist"
                    android:src="@drawable/ic_musiclist"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/smore"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/smore"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/white"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_more"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/centerimage"
                android:src="@drawable/mikusong"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/slistview"
                android:background="@color/black"
                android:layout_below="@+id/lintop"
                android:backgroundTint="@color/white"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="150dp">
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:id="@+id/volume"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fav"
                    android:backgroundTint="@color/white"
                    android:id="@+id/favourite"
                    android:layout_alignBaseline="@+id/volume"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/volume"
                    android:layout_marginTop="15dp"
                    android:id="@+id/seekbar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:0"
                    android:layout_below="@id/seekbar"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/stime"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:0"
                    android:layout_below="@id/seekbar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/etime"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_below="@+id/stime">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_home"
                        android:backgroundTint="@color/white"
                        android:id="@+id/loop"/>
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_backword"
                        android:backgroundTint="@color/white"
                        android:layout_toRightOf="@+id/loop"
                        android:tint="@color/black"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/backword"/>
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_play"
                        android:backgroundTint="@color/white"
                        android:tint="@color/black"
                        android:layout_toRightOf="@+id/backword"
                        android:tag="z"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/play"/>
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_forword"
                        android:backgroundTint="@color/white"
                        android:layout_toRightOf="@+id/play"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:tint="@color/black"
                        android:id="@+id/forword"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_home"
                        android:backgroundTint="@color/white"
                        android:layout_toRightOf="@+id/forword"
                        android:layout_marginLeft="70dp"
                        android:id="@+id/suffle"/>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>